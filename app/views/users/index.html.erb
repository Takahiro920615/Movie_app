

<h1 class="index_h1">ALL USER</h1>
<div class ="index-main">
 <div class="container">
    <% @users.each do |user|%>
      <div class="users-index">
        <div class="user-right">
          <%= image_tag "/user_images/#{user.picture}", width:50,height:50%>
          <%= link_to user.name, user_path(user.id)%>
           <%= link_to "削除", user, data: {turbo_method: :delete, confirem:"#{user.name}を削除してよろしいですか？"},class: "btn btn-danger"%>
        </div>
      </div>
    <% end %>
 </div>
</div>