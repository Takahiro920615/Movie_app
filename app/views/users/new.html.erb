

<div class="main users-new">
  <div class="container">
 
    <div class="form-heading">新規ユーザー登録</div>
    
    <%= form_tag users_path do %>
      <div class="form users-form">
        <div class="form-body">
        <% if @user.errors.any?%>
        <ul>
        <% @user.errors.full_messages.each do |message|%>
          <li><%= message %></li>
        <% end %>
        </ul>
        <% end %>
          <p>ユーザー名</p>
          <input name="name">
          <p>メールアドレス</p>
          <input name="email">
          <input type="submit" value="新規登録">
        </div>
      </div>
    <% end %>
  </div>
</div>