<%= stylesheet_link_tag 'movies' %>

<div class="main show_user-movie">
  <div class="container">
    <h1><%="#{@movie.title}についての投稿"%></h1>
    <div><br>
     <% if @movie.img? %>
       <div class="d-flex justify-content-center">
         <p><%= image_tag @movie.img.url, style: "max-height: 200px; width: auto" %></p>
       </div>
    <% end %>
    </div>
    <div>
    <li><%="監督"%></li>
    <%= "#{@movie.director}" %>
    </div><br>
  
   <div>
     <li><%= "上映時間" %></li>
     <td colspan="11"><%= "#{@movie.screentime}" %></td>
   </div><br>
  
   <div>
   <li><%= "映画詳細" %></li>
    <td colspan="11"><%= "#{@movie.detail}" %></td>
   </div><br>
  
   <div>
    <li><%= "感想" %></li>
    <td colspan="11"><%= "#{@movie.impression}" %></td>
   </div><br>

  </div>
</div>