<%= stylesheet_link_tag 'movies' %>

<div class="main show_user-movie">
  <div class="container">
    <h1><%="#{@movie.title}についての投稿"%></h1>
    <div><br>
     <% if @movie.img? %>
       <div class="d-flex justify-content-center">
         <p><%= image_tag @movie.img.url, style: "max-height: 200px; width: auto" %></p>
       </div>
    <% end %>
    </div>
    <div>
    <li><%="監督"%></li>
    <%= "#{@movie.director}" %>
    </div><br>
  
   <div>
     <li><%= "上映時間" %></li>
     <td colspan="11"><%= "#{@movie.screentime}" %></td>
   </div><br>
  
   <div>
   <li><%= "映画詳細" %></li>
    <td colspan="11"><%= "#{@movie.detail}" %></td>
   </div><br>
  
   <div>
    <li><%= "感想" %></li>
    <td colspan="11"><%= "#{@movie.impression}" %></td>
   </div><br>
  </div>
  <div>
    <h2>コメントを投稿する</h2>
     <%= form_with(model: [Comment.new, @movie], url: user_movie_comment_path(current_user,@movie.id)) do |f|%>
      <%= f.text_area :coment, place_holder: "コメントを入力してください"%>
      <%= f.submit "投稿する"%>
     <% end %>
  </div>

  <div>
   <h2>コメント一覧</h2>
    <% @movie.comments.each do |comment|%>
      <div>
        <strong><%= comment.user.name%></strong>: <%= comment.content%>
      </div>
    <% end %>
  </div>
</div>